<!-- admin/edit-product.ejs -->
<%-include('../includes/head.ejs')%>
  </head>
  <body>
    <%-include('../includes/navbar.ejs')%>
    <main>
      <form action="/admin/<%if(editmode){%>edit-product<%}else{%>add-product<%}%>" method="POST">
        <div>
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%if(editmode){%> <%=product.title%> <%}%>"/>
        </div>
        <div>
          <label for="imageUrl">Image URL</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<%if(editmode){%> <%=product.imageUrl%> <%}%>"/>        
        </div>
        <div>
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<%if(editmode){%><%=product.price%><%}%>"/>        
        </div>
        <div>
          <label for="description"></label>
          <textarea name="description" id="description" cols="30" rows="10" placeholder="Enter Description">
            <%if(editmode){%> <%=product.description%> <%}%>
          </textarea>        
        </div>
        <br>
        <%if(editmode){%><input type="hidden" name="productId" value="<%=product._id%>"> <%}%>        
        <button type="submit">
          <%if(editmode){%> Update Product <%}else{%> Add Product <%}%>
        </button>
      </form>
    </main>
  <%-include('../includes/end.ejs')%>
